<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:fbutton="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/bgkku">
    <Button
            android:text="TALKING"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/talk_button" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="217dp"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"
            style="@android:style/Widget.DeviceDefault" android:drawableBottom="@drawable/ic_action_send"
    />
    <Button
            android:text="ADMIN"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/admin_button" android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/talk_button" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="@+id/talk_button"/>
    <Button
            android:text="EXIT"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exit_button" android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/admin_button" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="@+id/admin_button"/>


</android.support.constraint.ConstraintLayout>